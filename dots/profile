if [ -d "/run/current-system/" ]; then
    export JAVA_HOME="/run/current-system/sw/"
    export LD_LIBRARY_PATH="$HOME/.nix-profile/lib:/run/current-system/sw/lib/:$LD_LIBRARY_PATH"
fi

export PATH="$PATH:$HOME/.cargo/bin:$HOME/bin"
export EDITOR="nvim"
export EDITOR="emacsclient -t --alternate-editor=\"\""
export VISUAL="emacsclient -t --alternate-editor=\"\""

unsetopt extendedglob
alias o=xdg-open
alias e="emacsclient -t --alternate-editor=\"\""
alias gcm="git checkout master"
alias gs="git status"
